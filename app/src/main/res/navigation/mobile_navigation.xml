<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_explore">
    <fragment
        android:id="@+id/nav_explore"
        android:name="com.example.newsfeedapp.ui.fragment.home.HomeFragment"
        android:label="News"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_explore_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/nav_wish_list"
        android:name="com.example.newsfeedapp.ui.fragment.favourite.FavouriteFragment"
        android:label="Favourite"
        tools:layout="@layout/fragment_wish_list">
        <action
            android:id="@+id/action_nav_wish_list_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.newsfeedapp.ui.fragment.details.DetailsFragment"
        android:label="Details"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="article"
            app:argType="com.example.newsfeedapp.data.model.Article" />
        <action
            android:id="@+id/action_detailsFragment_to_webViewFragment"
            app:destination="@id/webViewFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/webViewFragment"
        android:name="com.example.newsfeedapp.ui.fragment.details.WebViewFragment"
        android:label="Web View"
        tools:layout="@layout/fragment_web_view">
        <argument
            android:name="webViewUrl"
            app:argType="string" />
    </fragment>
</navigation>